{
	"extends": [
		"next/core-web-vitals",
		"prettier"
	],
	"settings": {
		"react": {
			"version": "detect"
		},
		"next": {
			"rootDir": "./src"
		}
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": "off",
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		]
	}
}